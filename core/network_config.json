{
    "main_node": {
        "port": 5000,
        "host": "0.0.0.0"
    },
    "member_nodes": {
        "min_port": 5001,
        "max_port": 5999
    },
    "authorization": {
        "require_member_address": true,
        "verify_membership": true
    },
    "endpoints": {
        "membership": "/membership/members",
        "proposals": "/proposals",
        "transactions": "/transactions/new",
        "chain": "/chain"
    },
    "logging": {
        "level": "INFO",
        "format": "%(asctime)s - %(levelname)s - %(message)s",
        "date_format": "%Y-%m-%d %H:%M:%S"
    },
    "network": {
        "host": "localhost",
        "port": 5000
    },
    "blockchain": {
        "genesis_block": {
            "previous_hash": "1"
        },
        "block_creation": {
            "interval": {
                "value": 10,
                "unit": "minutes"
            },
            "check_frequency": {
                "value": 1,
                "unit": "minute"
            }
        },
        "max_transactions_per_block": 100
    },
    "voting": {
        "timeout": {
            "value": 72,
            "unit": "hours"
        },
        "reminder": {
            "value": 48,
            "unit": "hours"
        },
        "consensus": {
            "required_votes": 1,
            "threshold": 0.51
        }
    },
    "auto_reject": {
        "enabled": true,
        "timeout": {
            "value": 10,
            "unit": "minutes"
        },
        "reminder": {
            "value": 8,
            "unit": "minutes"
        }
    }
}
